#!/data/data/com.termux/files/usr/bin/bash

while true
do
    clear
    echo "======================="
    echo "      NexTerm v1.0"
    echo "======================="
    echo ""
    echo "1) System Info"
    echo "2) Disk Usage"
    echo "3) Check Internet"
    echo "4) Exit"
    echo ""
    read -p "Select an option: " choice

    case $choice in
        1)
            echo ""
            uname -a
            ;;
        2)
            echo ""
            df -h
            ;;
        3)
            echo ""
            ping -c 2 8.8.8.8
            ;;
        4)
            echo "Goodbye."
            exit
            ;;
        *)
            echo "Invalid option."
            ;;
    esac

    echo ""
    read -p "Press Enter to return to menu..."
done
